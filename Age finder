import tkinter as tk
from tkinter import messagebox
from datetime import date
def calculate_age():
    try:
        day = int(entry_day.get())
        month = int(entry_month.get())
        year = int(entry_year.get())
        today = date.today()
        birth_date = date(year, month, day)
        age = today.year - birth_date.year
        if (today.month, today.day) < (birth_date.month, birth_date.day):
            age -= 1
        label_result.config(text=f"Your Age is: {age} years")
    except ValueError:
        messagebox.showerror("Error", "Please enter valid numbers ğŸ˜")
root = tk.Tk()
root.title("Age Calculator")
root.geometry("350x300")
root.resizable(False, False)
tk.Label(root, text="Age Calculator App", font=("Arial", 16, "bold")).pack(pady=10)
frame = tk.Frame(root)
frame.pack(pady=10)
tk.Label(frame, text="Day:").grid(row=0, column=0, padx=5, pady=5)
entry_day = tk.Entry(frame, width=5)
entry_day.grid(row=0, column=1)
tk.Label(frame, text="Month:").grid(row=1, column=0, padx=5, pady=5)
entry_month = tk.Entry(frame, width=5)
entry_month.grid(row=1, column=1)
tk.Label(frame, text="Year:").grid(row=2, column=0, padx=5, pady=5)
entry_year = tk.Entry(frame, width=5)
entry_year.grid(row=2, column=1)
tk.Button(root, text="Calculate Age", command=calculate_age).pack(pady=10)
label_result = tk.Label(root, text="", font=("Arial", 12))
label_result.pack(pady=10)
root.mainloop()
